extends layout

block content

  h1 Welcome

  p You are logged in.

  form(action="/logout" method="post")
    button.btn.btn-primary(type="submit") Logout

  form.form-inline(action='/' method="post" id="filter")
    .form-group
      label(for="customerId") Customer Id
      input.form-control(type="number" min="0" id="customerId" name="customerId" placeholder="1" autofocus)
    .form-group
      label(for="amount") Amount
      input.form-control(type="number" step="0.01" min="0" id="amount" name="amount" placeholder="22.12")
    .form-group
      label(for="date") Date
      input.form-control(type="date" id="date" name="date")

    button.btn.btn-lg.btn-primary.btn-block(type="submit") Apply Filters

  

  .transactions.container
    .row
      if transactions
        div
          h2.text-center List of transactions
          each transaction in transactions
            .col-xs-4.text-center
              p= 'id: ' + transaction.id
              p= 'amount: ' + transaction.amount
              p= 'date: ' + transaction.createdAt
        
      else 
        h2.text-center Select filter
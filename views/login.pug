extends layout

block content

  form(action="/login" method="post" id="loginForm")
    h1 Please sign in

    .form-group
      label(for="username") Username
      input.form-control(type="username" id="username" name="username" placeholder="username" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)

    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login

  form(action="/signup" method="post" id="signupForm")
    h1 Or you can sign up

    .form-group
      label(for="username") Username
      input.form-control(type="username" id="username" name="username" placeholder="username" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign Up